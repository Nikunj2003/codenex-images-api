# Environment configuration for Codenex Images API
# Copy this file to .env and fill in real values. Do NOT commit your .env.

# Node environment
NODE_ENV=development
PORT=3000

# MongoDB
# Example: mongodb+srv://user:pass@cluster0.xxxxx.mongodb.net/codenex-images?retryWrites=true&w=majority
MONGODB_URI=

# CORS
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:8080,http://localhost:3000

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# Google Gemini (required)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash-image-preview
GEMINI_MAX_RETRIES=3
GEMINI_TIMEOUT=30000

# Encryption
ENCRYPTION_ALGORITHM=aes-256-cbc
# Use a strong 32+ character random string
ENCRYPTION_SECRET=please-change-to-a-strong-32-64-char-secret

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Cache
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# Auth0 (optional, enables JWT auth if provided)
AUTH0_DOMAIN=
AUTH0_AUDIENCE=
# Defaults to https://<AUTH0_DOMAIN>/ if not set
AUTH0_ISSUER=

# Cloudinary (optional, for image storage)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Legacy/auxiliary (used by legacy index.js CORS setup)
CLIENT_URL=http://localhost:8080
